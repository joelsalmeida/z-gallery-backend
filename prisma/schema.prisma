generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @unique @db.VarChar(19)
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  refreshTokens RefreshToken[]
  albums        Album[]
}

model RefreshToken {
  token     String   @id
  userId    String
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Album {
  id          String   @id
  ownerId     String
  title       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  photos Photo[]
  owner  User    @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([ownerId])
}

model Photo {
  id               String   @id
  albumId          String
  title            String
  description      String
  size             Int
  predominantColor String
  location         String
  creationDate     DateTime
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  album Album @relation(fields: [albumId], references: [id], onDelete: Restrict)

  @@index([albumId])
}
